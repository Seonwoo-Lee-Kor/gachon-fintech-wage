#include <Wire.h>
#include <hd44780.h>
#include <hd44780ioClass/hd44780_I2Cexp.h>
#include <LiquidCrystal_I2C.h>

hd44780_I2Cexp lcd(0x27,16,2);
void setup() {
  lcd.begin(16,2);
  
}

void loop() {
  lcd.setCursor(0,0);
  lcd.print("Have a good day!");
  lcd.setCursor(1,1);
  lcd.print("bey chan young");
  delay(2000);
  
}